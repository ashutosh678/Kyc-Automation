{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": false,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
